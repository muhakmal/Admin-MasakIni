<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.baskom.miadmin">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_mi"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_mi"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:replace="android:icon">
        <activity
            android:name=".activity.SplashActivity"
            android:theme="@style/splashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.MainDrawerActivity" />
        <activity android:name=".activity.KelolaResepActivity" />
        <activity android:name=".activity.KelolaVideoActivity" />
        <activity android:name=".activity.TambahResepActivity" />
        <activity android:name=".activity.TambahVideoActivity"></activity>
    </application>

</manifest>